<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp"
    android:id="@+id/boutique_item"
    android:background="@color/bottom_bar_taobao_bg">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/layout_boutique"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:src="@drawable/nopic"
        />
    <TextView
        android:id="@+id/boutique_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Aug 28 201"
        android:layout_toRightOf="@id/layout_boutique"
        android:layout_marginTop="20dp"
        android:textColor="@color/list_item_title"
        android:ellipsize="end"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/boutique_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="冬秋衣橱大换血"
        android:layout_toRightOf="@id/layout_boutique"
        android:layout_below="@id/boutique_title"
        android:layout_marginTop="20dp"
        android:textColor="@color/list_item_name"
        android:ellipsize="end"
        android:textSize="20sp"
        />

    <TextView
        android:id="@+id/boutique_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2015F /W "
        android:layout_toRightOf="@id/layout_boutique"
        android:layout_below="@id/boutique_name"
        android:layout_marginTop="10dp"
        android:textColor="@color/gray_normal"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        />

</RelativeLayout>